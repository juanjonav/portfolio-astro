---
// Navbar.astro
---

<nav class="fixed top-0 left-0 right-0 bg-[rgba(11,0,19,0.558)] backdrop-blur-md shadow-lg z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="text-white text-xl font-bold">
        Juan José
      </a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-8">
        <a href="#hero" class="text-gray-300 hover:text-white transition-colors duration-200">Inicio</a>
        <a href="#proyectos" class="text-gray-300 hover:text-white transition-colors duration-200">Proyectos</a>
        <a href="#sobre-mi" class="text-gray-300 hover:text-white transition-colors duration-200">Sobre Mí</a>
        <a href="#contacto" class="text-gray-300 hover:text-white transition-colors duration-200">Contacto</a>
      </div>
      

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden text-white focus:outline-none">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="#hero" class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md">Inicio</a>
        <a href="#proyectos" class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md">Proyectos</a>
        <a href="#sobre-mi" class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md">Sobre Mí</a>
        <a href="#contacto" class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-700 rounded-md">Contacto</a>
      </div>
    </div>
    
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
